  <script>
    function reply(answer) {
      localStorage.setItem('amirAnswer', answer);
      document.getElementById('inviteCard').style.display = 'none';

      let msg = "";
      if (answer === 'Yes') {
        msg = "Yay! ğŸ¥° I can't wait to see you at dinner tonight! Thank you Amir ğŸ’—";
      } else {
        msg = "Aww okay ğŸ¥º Maybe next time, and thank you for replying anyway ğŸ’Œ";
      }

      document.getElementById('thankYouMessage').innerText = msg;
    }

    // Optional: Show his previous response if you reload
    window.onload = () => {
      const saved = localStorage.getItem('amirAnswer');
      if (saved) {
        document.getElementById('inviteCard').style.display = 'none';
        document.getElementById('thankYouMessage').innerText = 
